{
  "name": "nextjs-template",
  "homepage": "TODO",
  "version": "0.2.0",
  "license": "MIT",
  "author": "John Castorina",
  "description": "High Spot Web App Front End",
  "dependencies": {
    "@fortawesome/fontawesome-free": "5.15.3",
    "@popperjs/core": "2.9.1",
    "@tailwindcss/forms": "^0.2.1",
    "@types/ramda": "^0.27.40",
    "chart.js": "^2.9.4",
    "formik": "^2.2.9",
    "gulp": "4.0.2",
    "gulp-append-prepend": "1.0.8",
    "next": "^11.0.0",
    "prop-types": "^15.7.2",
    "ramda": "^0.27.1",
    "react": "^17.x",
    "react-dom": "^17.x",
    "react-query": "^3.17.2",
    "tailwindcss": "^2.2.2"
  },
  "scripts": {
    "start": "next start",
    "build": "next build",
    "dev": "concurrently \"yarn:tailwind:dev\" \"yarn:next dev\"",
    "build:tailwind": "tailwind build src/styles/index.css -o src/styles/tailwind.css",
    "tailwind:dev": "TAILWIND_MODE=watch postcss src/styles/index.css -o src/styles/tailwind.css --watch",
    "tailwind:build": "postcss -i src/styles/index.css -o src/styles/tailwind.css",
    "lint": "eslint --ignore-path .eslintignore \"**/*.{jsx,js,tsx}\" --fix",
    "lint:prettier": "pretty-quick",
    "style:all": "tsc && npm run style:lint && npm run style:prettier",
    "style:lint": "eslint '**/*.{js,jsx,ts,tsx}'",
    "style:prettier": "prettier --check '**/*.{js,jsx,ts,tsx}'",
    "make-pretty": "prettier --write '**/*.{js,jsx,ts,tsx}'",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prepare": "husky install",
    "cypress:open": "cypress open",
    "docker:prod": "docker-compose -f docker-compose.prod.yaml up -d",
    "docker:prod:new": "docker-compose -f docker-compose.prod.yaml up --build -d",
    "docker:prod:stop": "docker-compose -f docker-compose.prod.yaml down",
    "docker:dev": "docker-compose -f docker-compose.dev.yaml up -d",
    "docker:dev:new": "docker-compose -f docker-compose.dev.yaml up --build -d",
    "docker:dev:stop": "docker-compose -f docker-compose.dev.yaml down"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "optionalDependencies": {
    "typescript": "^4.3.4"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/react": "^6.2.9",
    "@types/cypress": "^1.1.3",
    "@types/gulp": "^4.0.8",
    "@types/next": "^9.0.0",
    "@types/prettier": "2.2.1",
    "@types/prop-types": "^15.7.3",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "@types/react-query": "^1.2.9",
    "@types/tailwindcss": "^2.0.6",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "autoprefixer": "^10.2.6",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.2.0",
    "cypress": "^7.5.0",
    "eslint": "^7.29.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-next": "^11.0.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "postcss": "^8.3.5",
    "postcss-cli": "^8.3.1",
    "postcss-loader": "^6.1.0",
    "prettier": "^2.2.1",
    "storybook": "^6.2.9"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint",
      "pre-commit": "lint staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint"
    ],
    "**/*": [
      "pretty-quick â€” staged",
      "git add"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  }
}
